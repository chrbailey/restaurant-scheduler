# =============================================================================
# Restaurant Scheduler - Production Environment Configuration
# =============================================================================
# Copy this file to .env and update with your production values
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=restaurant
POSTGRES_PASSWORD=                    # [REQUIRED] Strong password for database
POSTGRES_DB=restaurant_scheduler
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PREFIX=rs:

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=                           # [REQUIRED] Generate with: openssl rand -base64 64
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# -----------------------------------------------------------------------------
# OTP Configuration
# -----------------------------------------------------------------------------
OTP_EXPIRY_SECONDS=300
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5
OTP_LOCKOUT_SECONDS=900

# -----------------------------------------------------------------------------
# Twilio (SMS OTP)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
TWILIO_FROM_NUMBER=

# -----------------------------------------------------------------------------
# Firebase (Push Notifications)
# -----------------------------------------------------------------------------
FIREBASE_PROJECT_ID=

# -----------------------------------------------------------------------------
# Notifications
# -----------------------------------------------------------------------------
NOTIFICATION_MAX_PER_HOUR=20
QUIET_HOURS_START=23:00
QUIET_HOURS_END=07:00

# -----------------------------------------------------------------------------
# Web Service
# -----------------------------------------------------------------------------
WEB_PORT=80

# -----------------------------------------------------------------------------
# CORS (comma-separated origins)
# -----------------------------------------------------------------------------
CORS_ORIGINS=https://your-domain.com

# -----------------------------------------------------------------------------
# Ghost Kitchen Integration
# -----------------------------------------------------------------------------
KITCHENHUB_API_KEY=
KITCHENHUB_BASE_URL=https://api.trykitchenhub.com/v1
