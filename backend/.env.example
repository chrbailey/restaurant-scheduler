# Application
NODE_ENV=development
PORT=3000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/restaurant_scheduler?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=rs:

# JWT Authentication
# IMPORTANT: Generate a secure random string for production (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OTP Configuration
OTP_EXPIRY_SECONDS=300
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5
OTP_LOCKOUT_SECONDS=900

# Twilio (for SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid
TWILIO_FROM_NUMBER=+1234567890

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Notifications
NOTIFICATION_MAX_PER_HOUR=20
NOTIFICATION_BATCH_DELAY=300000
QUIET_HOURS_START=23:00
QUIET_HOURS_END=07:00
REMINDER_HOURS_BEFORE=24
REMINDER_MINUTES_BEFORE=120

# KitchenHub (Ghost Kitchen Aggregator)
KITCHENHUB_API_KEY=your_kitchenhub_api_key
KITCHENHUB_BASE_URL=https://api.trykitchenhub.com/v1
